@model WebUserRegistration.Models.UserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>UserViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    @*<input type="radio" name="Gender" value="Male" asp-for="Male" />*@
                    Male
                    @Html.RadioButtonFor(model => model.Gender, "M")
                </label>
            </div>
            <div class="form-group">
                <label class="form-check-label">
                    @*<input type="radio" name="Gender" value="Female" asp-for="Female" />*@
                    Female
                    @Html.RadioButtonFor(model => model.Gender, "F")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RegisteredDate" class="control-label"></label>
                <input asp-for="RegisteredDate" class="form-control" />
                <span asp-validation-for="RegisteredDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Day1" /> @Html.DisplayNameFor(model => model.Day1)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Day2" /> @Html.DisplayNameFor(model => model.Day2)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Day3" /> @Html.DisplayNameFor(model => model.Day3)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AddationalRequest" class="control-label"></label>
                <input asp-for="AddationalRequest" class="form-control" />
                <span asp-validation-for="AddationalRequest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
